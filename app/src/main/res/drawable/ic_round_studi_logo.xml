<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:drawable="@drawable/ic_round_studi_logo_bg" />

  <item android:id="@+id/logo_hours">
    <rotate
      android:drawable="@drawable/ic_round_studi_logo_hours"
      android:fromDegrees="0"
      android:toDegrees="360"
      android:pivotX="50%"
      android:pivotY="50%" />
  </item>

  <item android:id="@+id/logo_minutes">
    <rotate
      android:drawable="@drawable/ic_round_studi_logo_minutes"
      android:fromDegrees="0"
      android:toDegrees="360"
      android:pivotX="50%"
      android:pivotY="50%" />
  </item>

</layer-list>
